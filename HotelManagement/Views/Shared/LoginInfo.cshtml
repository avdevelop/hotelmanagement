@using HotelManagement.Helpers.CacheHelpers

@if (SessionCache.UserId == null)
{
    <span class="login">
        @Html.ActionLink("Login", "Index", "Login")
    </span>
}
else
{ 
    <span class="login">
        @Html.ActionLink(SessionCache.UserEmail + " ", "Logout", "Login", new { title = "Click for Account Details" })
        @Html.ActionLink("Logout", "Logout", "Login", new { title = "Click to Logout" })
    </span>
}
