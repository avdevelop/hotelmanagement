@using HotelManagement.Helpers;

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <meta name="description" content="This is a wonderful homepage of the Free Hotel Website Template provided by TemplateMonster." />
    <link href="../../Content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/css/layout.css" rel="stylesheet" type="text/css" />
    <script src="../../Content/scripts/maxheight.js" type="text/javascript"></script>
    <script src="../../Content/scripts/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script src="../../Content/scripts/script.js" type="text/javascript"></script>
    <!--[if lt IE 7]>
	<link href="ie_style.css" rel="stylesheet" type="text/css" />
   <script type="text/javascript" src="ie_png.js"></script>
   <script type="text/javascript">
	   ie_png.fix('.png, #header .row-2, #header .nav li a, #content, .gallery li');
   </script>
<![endif]-->
</head>
<body id="page1" onload="new ElementMaxHeight();">
    <div id="main">
        <!-- header -->
        <div id="header">
            <div class="row-1">
                <div class="wrapper">
                    <div class="logo">
                        <h1>@Html.ActionLink(Html.AppSetting("HotelName"), "Index", "Home")</h1>
                        <em>Hotel</em> <strong>True Luxury</strong>
                    </div>                    
                    <div class="phones">
                        Call Us <br />
                        @Html.AppSetting("HotelHeaderPhone")<br />
                        @RenderPage("~/Views/Shared/LoginInfo.cshtml")
                    </div>
                </div>
            </div>
            <div class="row-2">
                <div class="indent">
                    <!-- header-box begin -->
                    <div class="header-box">
                        @RenderPage("~/Views/Shared/MainMenu.cshtml")                        
                    </div>
                    <!-- header-box end -->
                </div>
            </div>
        </div>
        <div class="ic">
            Lovely Flash templates from TemplateMonster!</div>
        <!-- content -->
        <div id="content">
            <div class="wrapper">
                <div class="aside maxheight">
                    <!-- box begin -->
                    @RenderPage("~/Views/Shared/BookingSection.cshtml")
                    <!-- box end -->
                </div>
                @RenderBody()
            </div>
        </div>
        <!-- footer -->
        <div id="footer">
            @RenderPage("~/Views/Shared/AdminMenu.cshtml")
            <div class="wrapper">
                <div class="fleft">
                    Copyright (c) 2009 FiveStar Hotel</div>
                <div class="fright">
                    Flash Templates from <a href="http://www.templatemonster.com/flash-templates.php" target="_blank" rel="nofollow">www.templatemonster.com</a> - Squeeze Your Competitors.</div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
    $(document).ready(function ()
    {
        /*Set the header-box image*/
        $('.header-box').css('background-image', 'url("@Html.AppSetting("HeaderImage")")');


    });
    </script>
</body>
</html>