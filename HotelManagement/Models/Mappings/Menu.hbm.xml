<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="HotelManagement.Models" assembly="HotelManagement">

  <class name="Menu" table="Menu">

    <id name="Id">
      <column name="MenuId" sql-type="int" not-null="true"></column>
      <generator class="identity"></generator>
    </id>

    <property name="Name">
      <column name="Name" not-null="true"></column>
    </property>
    
    <property name="Description">
      <column name="Description" not-null="false"></column>      
    </property>
    
    <property name="Order">
      <column name="[Order]" not-null="true"></column>
    </property>    

  </class>

</hibernate-mapping>
