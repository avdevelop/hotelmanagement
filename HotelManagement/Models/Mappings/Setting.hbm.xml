<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="HotelManagement.Models" assembly="HotelManagement">

  <class name="Setting" table="Setting">

    <id name="Id">
      <column name="SettingId" sql-type="int" not-null="true"></column>
      <generator class="identity"></generator>
    </id>

    <property name="Name">
      <column name="Name" not-null="true"></column>
    </property>
    <property name="Value">
      <column name="Value" not-null="true"></column>
    </property>
    <property name="Description">
      <column name="Description"></column>
    </property>

  </class>

</hibernate-mapping>